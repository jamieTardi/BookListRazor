@page
@model BookListRazor.Pages.BookList.EditModel
@{
}

<h1>Edit a Book</h1>

<br />

<h2 class="text-info">Create New Book</h2>
<br />


<div class="border container" style="padding: 30px">
    <form method="post">
        @*//had to add the hidden input here or there is no id being passed to the book*@
        <input type="hidden" asp-for="Book.Id"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>
            <br />
            <div class="col-3 offset-4">
                <input type="submit" value="Edit" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>

        </div>
    </form>
</div>